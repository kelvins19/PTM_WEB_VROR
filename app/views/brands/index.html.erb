<p style="color: green"><%= notice %></p>
<div class="container">
  <div class="row">
    <h1 class="float-start">Brands <%= link_to "New brand", new_brand_path, class: "h5 float-end" %></h1>
    <%= render partial: "layouts/search_form1", locals: { path: brands_path } %>
  </div>
  <div id="brands">
    <div class="row">
      <table>
        <thead>
          <th class="text-center">ID</th>
          <th class="text-center">Nama Merk</th>
          <th class="text-center">Action</th>
        </thead>
        <tbody>
          <% @brands.each do |brand| %>
          <tr>
            <%= render brand %>
            <td class="text-center">
              <%= link_to "Show this brand", brand %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= render partial: "layouts/paginate", locals: { item: @brands } %>
  </div>
</div>